<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MetricSystem</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]"> 

    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">MetricSystem</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav me-auto">
                        <a class="nav-item nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link" asp-controller="Conversion" asp-action="Fahrenheit">Fahrenheit</a>
                        <a class="nav-item nav-link" href="#">Inch</a>
                        <a class="nav-item nav-link" href="#">Pint</a>
                        <a class="nav-item nav-link" href="#">Yard</a>
                        <a class="nav-item nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>

                    <div class="navbar-nav ms-auto">
                        <a class="nav-item nav-link" href="#">
                            <span class="fa-solid fa-shopping-cart"></span> 
                            &nbsp;Calculations&nbsp;
                            <span class="badge bg-primary">2</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom bg-light">
    <div class="container">
        &copy; 2025 - MetricSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validation.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>